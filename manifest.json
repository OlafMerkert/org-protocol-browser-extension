{
  "manifest_version": 2,
  "name": "Org Protocol Browser Extension",
  "version": "1.0",
  "icons": {
    "48": "icons/org-mode-unicorn-logo.png"
  },

  "permissions": ["activeTab", "tabs"],

  "browser_action": {
    "default_icon": "icons/org-mode-unicorn-logo.png",
    "default_title": "Org Protocol",
    "default_popup": "protocol-actions.html"
  },

  "commands": {
    "automatic-capture": {
      "suggested_key": { "default": "F8" },
      "description": "Automatic Capture"
    },
    "store-link": {
      "suggested_key": { "default": "F9" },
      "description": "Store Link"
    },
    "open-in-emacs-browser": {
      "suggested_key": { "default": "F2" },
      "description": "Open in eww"
    }
  },

  "background": {
    "scripts": ["dist/captureKeys.js"]
  }
}
