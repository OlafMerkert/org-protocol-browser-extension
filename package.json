{
  "name": "org-protocol-browser-extension",
  "version": "1.4",
  "description": "Trigger org-capture from the browser via org-protocol.",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/OlafMerkert/org-protocol-browser-extension"
  },
  "author": "Olaf Merkert <olaf@m-merkert.de>",
  "dependencies": {
    "@babel/core": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.10.4",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^29.3.1",
    "babel-loader": "^9.1.0",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.2",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.3.1",
    "prettier": "^2.0.5",
    "ramda": "^0.28.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "style-loader": "^3.3.1",
    "web-ext": "^7.3.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^4.9.1"
  },
  "devDependencies": {
    "eslint": "^8.27.0",
    "eslint-plugin-jest": "^27.1.5",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.0.8",
    "jest-environment-jsdom": "^29.3.1"
  },
  "scripts": {
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development --watch",
    "package": "web-ext build -s target/dist -a target --overwrite-dest",
    "lint": "eslint src/**",
    "lint:extension": "web-ext lint -s target/dist",
    "package:signed": "web-ext sign -s target/dist -a target --overwrite-dest --id=\"{c53e484f-cf8d-4da3-a33f-4f69674f6b1b}\"",
    "start": "web-ext run",
    "test": "jest",
    "format": "prettier --write **/*.js **/*.json"
  },
  "babel": {
    "presets": [
      "@babel/preset-react",
      [
        "@babel/preset-env",
        {
          "targets": {
            "firefox": 61,
            "chrome": 69
          }
        }
      ]
    ]
  },
  "prettier": {
    "printWidth": 100,
    "trailingComma": "es5"
  },
  "jest": {
    "testEnvironment": "jsdom"
  }
}
